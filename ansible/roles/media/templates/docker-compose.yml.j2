version: "3.1"
services:
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    environment:
      - PUID=0
      - PGID=0
      - UMASK=0022
      - TZ=America/Chicago
    volumes:
      - /opt/media/sonar:/config
      - /mnt/media:/media
    ports:
      - "8989:8989"
    labels:
      - homepage.group=Containers
      - homepage.name=Sonarr
      - homepage.icon=sonarr.png
      - homepage.href=http://10.100.10.20:8989/
    restart: unless-stopped

  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    environment:
      - PUID=0
      - PGID=0
      - UMASK=0022
      - TZ=America/Chicago
    volumes:
      - /opt/media/radarr:/config
      - /mnt/media:/media
    ports:
      - "7878:7878"
    labels:
      - homepage.group=Containers
      - homepage.name=Radarr
      - homepage.icon=radarr.png
      - homepage.href=http://10.100.10.20:7878/
    restart: unless-stopped

  jellyseerr:
    #image: fallenbagel/jellyseerr:latest
    image: fallenbagel/jellyseerr:v1.6.0
    container_name: jellyseerr
    environment:
      - LOG_LEVEL=debug
      - TZ=America/Chicago
    ports:
      - 5055:5055
    volumes:
      - /opt/media/jellyseer:/app/config
    labels:
      - homepage.group=Containers
      - homepage.name=Jellyseerr
      - homepage.icon=jellyseerr.png
      - homepage.href=http://10.100.10.20:5055/
    restart: unless-stopped

  prowlarr:
    image: lscr.io/linuxserver/prowlarr:develop
    container_name: prowlarr
    network_mode: "service:gluetun"
    environment:
      - PUID=0
      - PGID=0
      - UMASK=0022
      - TZ=America/Chicago
    volumes:
      - /opt/media/prowlarr:/config
    labels:
      - homepage.group=Containers
      - homepage.name=Prowlarr
      - homepage.icon=prowlarr.png
      - homepage.href=http://10.100.10.20:9696/
    restart: unless-stopped

  jellyseerr-cloudflare-tunnel:
    container_name: jellyseerr-cloudflare-tunnel
    image: cloudflare/cloudflared:latest
    command: tunnel --no-autoupdate run
    restart: unless-stopped
    environment:
      TUNNEL_TOKEN: "{{ cloudflare_tunnel_token }}"

  gluetun:
    image: qmcgaw/gluetun
    container_name: gluetun
    cap_add:
      - NET_ADMIN
    volumes:
      - /opt/media/gluetun:/gluetun
    ports:
      - "9696:9696"
      - "8080:8080"
      - "8112:8112"
      - "6881:6881"
      - "6881:6881/udp"
    labels:
      - homepage.group=Containers
      - homepage.name=Gluetun
      - homepage.icon=gluetun.png
    environment:
      - VPN_SERVICE_PROVIDER=private internet access
      - OPENVPN_USER="{{ openvpn_usename }}"
      - OPENVPN_PASSWORD="{{ openvpn_password }}"
      - SERVER_REGIONS=Netherlands
      - PRIVATE_INTERNET_ACCESS_VPN_PORT_FORWARDING=on
      - FIREWALL_OUTBOUND_SUBNETS=10.100.10.0/24
    devices:
      - /dev/net/tun:/dev/net/tun
    restart: unless-stopped

  sabnzbd:
    image: lscr.io/linuxserver/sabnzbd:latest
    container_name: sabnzbd
    network_mode: "service:gluetun"
    environment:
      - PUID=0
      - PGID=0
      - TZ=Etc/UTC
    volumes:
      - /opt/media/sabnzbd:/config
      - /mnt/media/:/media #optional
    labels:
      - homepage.group=Containers
      - homepage.name=SABnzbd
      - homepage.icon=sabnzbd.png
      - homepage.href=http://10.100.10.20:8080/
    depends_on:
      - gluetun
    restart: unless-stopped

